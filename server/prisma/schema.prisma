// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
  extensions = [pgcrypto]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// User 
model User {
  id                   Int    @id @default(autoincrement())
  uniqueId             String   @unique @default(uuid())
  createdAt            DateTime @default(now())
  email                String   @unique
  name                 String   @default("")
  profile              Profile?
  password             String
  confirmationCode     String   @default("")
  isVerified           Boolean  @default(false)
  expirer_date         DateTime @default(now())
  reset_password       String   @default("")
  otp_expired          Boolean  @default(false)
  status               Boolean  @default(false)
  active               Boolean  @default(false)
  blocked              Boolean  @default(false)

}
// Profile
model Profile {
  id     Int    @id @default(autoincrement())
  bio    String
  user   User   @relation(fields: [userId], references: [uniqueId], onDelete: Cascade)
  userId String    @unique
  @@index([userId])
}
enum Role {
  USER
  ADMIN
}